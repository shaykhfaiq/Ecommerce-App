<%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css", media: "all" %>
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", media: "all" %>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Helvetica Neue', sans-serif;
    background: linear-gradient(135deg, #e8f4fd 0%, #f0f8ff 100%);
  }

  .login-container {
    display: flex;
    min-height: 100vh;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .login-card {
    display: flex;
    background: white;
    border-radius: 30px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    max-width: 900px;
    width: 100%;
    min-height: 600px;
  }

  .design-section {
    flex: 1;
    background: linear-gradient(135deg, #f1f3f4 0%, #e8eaed 100%);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 2rem;
  }

  .geometric-shapes {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    opacity: 0.7;
  }

  .circle-1 {
    width: 16px;
    height: 16px;
    background: #4fc3f7;
    border-radius: 50%;
    top: 15%;
    left: 15%;
  }

  .triangle-1 {
    width: 0;
    height: 0;
    border-left: 12px solid transparent;
    border-right: 12px solid transparent;
    border-bottom: 20px solid #81c784;
    top: 25%;
    right: 20%;
  }

  .circle-2 {
    width: 12px;
    height: 12px;
    background: #ffb74d;
    border-radius: 50%;
    bottom: 30%;
    left: 10%;
  }

  .triangle-2 {
    width: 0;
    height: 0;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    border-bottom: 25px solid #f06292;
    bottom: 15%;
    right: 25%;
  }

  .circle-3 {
    width: 10px;
    height: 10px;
    background: #ba68c8;
    border-radius: 50%;
    top: 60%;
    right: 15%;
  }

  .user-icon-container {
    position: relative;
    z-index: 2;
  }

  .user-icon-box {
    width: 140px;
    height: 100px;
    background: #5f6368;
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .user-icon-inner {
    width: 80px;
    height: 60px;
    background: #4a4d52;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .form-section {
    flex: 1;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 2rem;
  }

  .form-container {
    width: 100%;
    max-width: 350px;
  }

  .form-title {
    text-align: center;
    font-size: 1.8rem;
    font-weight: 600;
    color: #333;
    margin-bottom: 2.5rem;
  }

  .input-group {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .input-icon {
    position: absolute;
    left: 18px;
    top: 50%;
    transform: translateY(-50%);
    color: #999;
    z-index: 1;
    font-size: 1.1rem;
  }

  .form-input {
    width: 100%;
    padding: 1.2rem 1.2rem 1.2rem 3.2rem;
    border: none;
    border-radius: 25px;
    background-color: #f1f3f4;
    font-size: 1rem;
    color: #333;
    box-sizing: border-box;
    transition: all 0.3s ease;
  }

  .form-input::placeholder {
    color: #999;
  }

  .form-input:focus {
    outline: none;
    background-color: #e8eaed;
    box-shadow: 0 0 0 2px rgba(76, 175, 80, 0.2);
  }

  .login-btn {
    width: 100%;
    padding: 1.2rem;
    background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
    border: none;
    border-radius: 25px;
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: 1.5rem;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .login-btn:hover {
    background: linear-gradient(135deg, #45a049 0%, #3d8b40 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(76, 175, 80, 0.3);
  }

  .forgot-link {
    display: block;
    text-align: center;
    color: #999;
    font-size: 0.9rem;
    text-decoration: none;
    margin-top: 1.5rem;
    transition: color 0.3s ease;
  }

  .forgot-link:hover {
    color: #4caf50;
  }

  .bottom-section {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  .create-account-link {
    color: #666;
    font-size: 0.9rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    transition: color 0.3s ease;
  }

  .create-account-link:hover {
    color: #4caf50;
  }

  .create-account-link i {
    margin-left: 0.5rem;
    font-size: 0.8rem;
  }

  @media (max-width: 768px) {
    .login-card {
      flex-direction: column-reverse;
      margin: 1rem;
    }

    .design-section {
      min-height: 200px;
    }

    .user-icon-box {
      width: 100px;
      height: 70px;
    }

    .user-icon-inner {
      width: 60px;
      height: 45px;
    }

    .form-container {
      padding: 2rem 1rem;
    }

    .form-title {
      font-size: 1.5rem;
    }
  }
</style>

<div class="login-container">
  <div class="login-card">
    <!-- Left: Design section -->
    <div class="design-section">
      <div class="geometric-shapes">
        <div class="shape circle-1"></div>
        <div class="shape triangle-1"></div>
        <div class="shape circle-2"></div>
        <div class="shape triangle-2"></div>
        <div class="shape circle-3"></div>
      </div>
      <div class="user-icon-container">
        <div class="user-icon-box">
          <div class="user-icon-inner">
            <i class="fas fa-user" style="color: white; font-size: 1.5rem;"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Right: Form -->
    <div class="form-section">
      <div class="form-container">
        <h2 class="form-title">Member Login</h2>

        <%= form_with url: sellers_auth_login_path, scope: :user, local: true do |f| %>
          <div class="input-group">
            <i class="fas fa-envelope input-icon"></i>
            <%= f.email_field :email, class: "form-input", placeholder: "Email", required: true %>
          </div>

          <div class="input-group">
            <i class="fas fa-lock input-icon"></i>
            <%= f.password_field :password, class: "form-input", placeholder: "Password", required: true %>
          </div>

          <%= f.submit "LOGIN", class: "login-btn" %>
        <% end %>

        <a href="#" class="forgot-link">Forgot Username / Password?</a>

        <div class="bottom-section">
          <%= link_to sellers_auth_registration_path, class: "create-account-link" do %>
            Create your Account
            <i class="fas fa-arrow-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>