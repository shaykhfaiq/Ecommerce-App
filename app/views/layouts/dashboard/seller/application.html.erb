<!DOCTYPE html>
<html>
  <head>
    <title>Seller Dashboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="min-h-screen bg-gray-100">
    <!-- Sidebar or Navbar here -->
    <div class="flex">
      <aside class="w-64 bg-white shadow h-screen p-4">
        <h2 class="text-lg font-semibold mb-4">Seller Dashboard</h2>
        <ul>
          <li><%= link_to 'Dashboard', dashboard_seller_dashboard_path, class: "block py-2 px-3 hover:bg-gray-200 rounded" %></li>
          <!-- Add more nav items here -->
        </ul>
      </aside>

      <main class="flex-1 p-6">
        <%= yield %>
      </main>
    </div>
  </body>
</html>
